<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/watermelon"
    android:layout_height="match_parent">


    <Button
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:text="GET STARTED!"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginStart="24dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textStyle="bold"
        android:textSize="70px"
        android:id="@+id/firstname"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="132dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/diet_restriction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Reciperfect!"
        android:textSize="130px"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/lastname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/email"
        android:textSize="70px"
        android:hint="example@email.com"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/firstname"
        android:layout_alignEnd="@+id/lastname"
        android:layout_marginEnd="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy"
        android:textSize="70px"
        android:id="@+id/birthday"
        android:layout_marginLeft="20px"
        android:textStyle="bold"
        android:layout_marginRight="20px"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginStart="14dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diet_restriction"
        android:layout_below="@+id/birthday"
        android:layout_toStartOf="@+id/lastname"
        android:layout_marginEnd="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textSize="70px"
        android:id="@+id/lastname"
        android:textStyle="bold"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/email"
        android:layout_alignEnd="@+id/continue_button" />

</RelativeLayout>