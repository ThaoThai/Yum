<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textSize="60px"
        android:id="@+id/lastname"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/firstname"
        android:layout_alignBottom="@+id/firstname"
        android:layout_toEndOf="@+id/firstname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="60px"
        android:id="@+id/firstname"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/continue_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/email"
        android:textSize="60px"
        android:hint="example@email.com"
        android:layout_below="@+id/firstname"
        android:layout_alignStart="@+id/firstname" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diet_restriction"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50px"
        android:id="@+id/datepicker"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:layout_below="@+id/diet_restriction"
        android:layout_alignStart="@+id/continue_button"></DatePicker>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:text="GET STARTED!"
        android:textColor="#fff"
        android:background="#03C04A"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp" />

</RelativeLayout>