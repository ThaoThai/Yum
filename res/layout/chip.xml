<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chip_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_chip"
    android:paddingBottom="@dimen/padding_top"
    android:paddingTop="@dimen/padding_top"
    android:layout_margin="@dimen/remove_icon_margin"
    tools:context="com.mobile.yum.MainActivity">

    <TextView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/chip_padding"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <View
        android:id="@+id/shim"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/action"
        android:layout_toRightOf="@+id/list_item"
        />
    <ImageView
        android:id="@+id/action"
        android:layout_width="@dimen/remove_icon_dimen"
        android:layout_height="@dimen/remove_icon_dimen"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:layout_marginRight="@dimen/remove_icon_margin"
        android:layout_marginEnd="@dimen/remove_icon_margin"
        />
</RelativeLayout>